<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="button_choice_uom">
        <button class="control-button btn btn-default btn-fill btn-wd"><i class="fa fa-plus-square-o"/> Change Unit of Measure</button>
    </t>

    <t t-name="choice_uoms_popup">
        <div class="modal-dialog">
            <div class="popup">
                <p class="title">Change Unit of Measure</p>
                <p class="body uoms-list"></p>
                <div class="button cancel">
                    Close
                </div>
            </div>
        </div>
    </t>

    <t t-name="uom_item">
        <div class='control-button uom_item' t-att-id="uom_item.id">
            <t t-esc="uom_item.price"/>  <t t-esc="widget.pos.currency.name"/>/ <t t-esc="uom_item.uom_id[1]"/>
        </div>
    </t>

</templates>
