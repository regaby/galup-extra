<?xml version="1.0" encoding="utf-8"?>
<templates id="template" inherit_id="point_of_sale.template">
    <t t-extend="ClientDetails">
        <t t-jquery='.client-details-right' t-operation='append'>
            <div class='client-detail'>
                <div>
                <span class='label'>Tipo_Doc</span>
                <t t-if='partner.main_id_category_id'>
                    <span class='detail client-id'><t t-esc='partner.main_id_category_id[1]'/></span>
                </t>
            </div>
            <div>
                <span class='label'>Numeo de documento</span>
                <t t-if='partner.main_id_number'>
                    <span class='detail client-id'><t t-esc='partner.main_id_number'/></span>
                </t>
            </div>
            </div>
        </t>
    </t>
    <t t-extend="ClientListScreenWidget">
        <t t-jquery='.client-list' t-operation='replace'>
            <table class='client-list'>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Tipo Doc</th>
                        <th>Numero de documento</th>
                    </tr>
                </thead>
                <tbody class='client-list-contents'>
                </tbody>
            </table>
        </t>
    </t>
    <t t-extend="ClientDetailsEdit">
        <t t-jquery=".client-details-right" t-operation="append">
		<div>
                <span class="order-category-id">
                   <b> Tipo Doc: </b>
                </span>
                <select id ="category_id" class="category-id" >
                     <t t-if="widget.category_id">
                        <option>
                            <t t-esc='widget.category_id'/>
                        </option>
                    </t>
                    <option></option>
                    <t t-foreach="widget.pos.category_id || []" t-as="item">
                        <t t-if="widget.pos.category_id != item.name">
                            <option>
                                <t t-esc='item.name'/>
                            </option>
                        </t>
                    </t>
                </select>

            </div> 
            <div>
             <span class='label'>Numero de documento:</span>
                <input class='detail required' name='partner.main_id_number' placeholder='Num doc'></input>
            </div>
	    </t> 
    </t>


